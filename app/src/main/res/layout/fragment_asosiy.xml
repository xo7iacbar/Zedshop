               android:layout_width="70dp"
               android:layout_height="70dp"
               android:src="@drawable/imgflwr"
               app:layout_constraintEnd_toEndOf="parent" />

           <ImageView
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:src="@drawable/imgflwr"
